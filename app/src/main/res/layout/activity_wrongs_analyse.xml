<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGGray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorBGWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/base_dimen"
            android:src="@drawable/back_" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="解析"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/base_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/base_dimen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorMainBlue" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/tv_sum_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/small_dimen"
                android:src="@drawable/icon_collection" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/see_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看视频"
            android:textColor="@color/colorBGWhite"
            android:background="@color/colorMainBlue"
            android:visibility="gone"
            android:padding="1dp"
            android:layout_marginLeft="@dimen/base_dimen"
            android:layout_marginTop="@dimen/base_dimen"
            android:textSize="@dimen/s_text_size" />

        <TextView
            android:id="@+id/see_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看文档"
            android:visibility="gone"
            android:textColor="@color/colorBGWhite"
            android:background="@color/colorMainBlue"
            android:padding="1dp"
            android:layout_marginLeft="@dimen/base_dimen"
            android:layout_marginTop="@dimen/base_dimen"
            android:textSize="@dimen/s_text_size" />

        <TextView
            android:id="@+id/see_gram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看图表"
            android:visibility="gone"
            android:textColor="@color/colorBGWhite"
            android:background="@color/colorMainBlue"
            android:padding="1dp"
            android:layout_marginLeft="@dimen/base_dimen"
            android:layout_marginTop="@dimen/base_dimen"
            android:textSize="@dimen/s_text_size" />
    </LinearLayout>

    <com.sxmh.wt.education.view.QuestionView
        android:id="@+id/question_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/base_dimen"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBGWhite"
        android:orientation="horizontal"
        android:padding="@dimen/small_dimen">

        <TextView
            android:id="@+id/tv_pre_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/pre_question"
            android:gravity="center"
            android:text="@string/pre_question" />

        <TextView
            android:id="@+id/tv_question_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/question_card"
            android:gravity="center"
            android:text="@string/question_card" />

        <TextView
            android:id="@+id/tv_next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/next_question"
            android:gravity="center"
            android:text="@string/next_question" />
    </LinearLayout>
</LinearLayout>

