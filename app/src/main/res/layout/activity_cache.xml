<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGGray"
    android:orientation="vertical">

    <com.sxmh.wt.education.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorBGWhite"
        app:title="@string/select_which_select"
        app:right_text="@string/multi_select"
        app:right_text_color="@color/colorMainBlue"
        app:title_color="@color/colorTextBlack" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBGWhite" />
</LinearLayout>