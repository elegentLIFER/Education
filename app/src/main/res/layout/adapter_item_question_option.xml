<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_outer"
    android:padding="@dimen/small_dimen">

    <com.sxmh.wt.education.view.OptionView
        android:id="@+id/option_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:enabled="false"
        android:layout_marginRight="@dimen/small_dimen"
        android:textSize="@dimen/base_text_size" />

    <TextView
        android:id="@+id/tv_option_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/s_text_size" />
</LinearLayout>