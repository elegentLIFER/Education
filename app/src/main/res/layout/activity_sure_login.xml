<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBGGray"
    android:orientation="vertical">

    <com.sxmh.wt.education.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        app:title="@string/login_by_code"
        android:background="@color/colorBGWhite"
        app:title_color="@color/colorTextBlack"
        android:layout_height="@dimen/title_height"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/sure_login_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/sure_login_warn"
        android:gravity="center"
        android:textColor="@color/colorTextBlack"
        android:textSize="12sp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="@string/sure_login"
        android:background="@drawable/shape_bt_bk_sure_login"
        android:textColor="@color/colorTextWhite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="@dimen/base_dimen"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/colorTextLTGray"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>