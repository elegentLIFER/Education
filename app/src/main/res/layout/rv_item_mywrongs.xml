<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_outer"
    android:layout_marginLeft="@dimen/base_dimen"
    android:layout_marginRight="@dimen/base_dimen"
    android:layout_marginTop="@dimen/base_dimen"
    android:background="@drawable/shape_white_shadow_back"
    android:orientation="vertical"
    android:padding="@dimen/small_dimen">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_dimen"
        android:layout_marginRight="@dimen/small_dimen"
        android:layout_marginTop="@dimen/big_dimen"
        android:layout_marginBottom="@dimen/big_dimen"
        android:textColor="@color/colorTextBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="@dimen/small_dimen"
        android:background="@color/colorTextDKGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_dimen"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/base_dimen"
            android:text="单选题：" />

        <TextView
            android:id="@+id/tv_dan_xuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/colorMainBlue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/base_dimen"
            android:text="多选题：" />

        <TextView
            android:id="@+id/tv_duo_xuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/colorMainBlue" />
    </LinearLayout>
</LinearLayout>