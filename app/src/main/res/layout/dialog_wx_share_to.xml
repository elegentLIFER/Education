<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/base_dimen">

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/base_dimen"
        android:layout_marginBottom="@dimen/base_dimen"
        android:drawablePadding="@dimen/base_dimen"
        android:drawableTop="@drawable/friend"
        android:gravity="center"
        android:text="微信好友"
        android:textColor="@color/colorTextBlack" />

    <TextView
        android:id="@+id/tv_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen"
        android:layout_marginBottom="@dimen/base_dimen"
        android:layout_weight="1"
        android:drawablePadding="@dimen/base_dimen"
        android:drawableTop="@drawable/timeline"
        android:gravity="center"
        android:text="朋友圈"
        android:textColor="@color/colorTextBlack" />
</LinearLayout>