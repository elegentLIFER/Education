<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBGWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/base_dimen"
    android:paddingTop="@dimen/base_dimen">

    <TextView
        android:id="@+id/tv_pre_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/small_dimen"
        android:drawableTop="@drawable/icon_last"
        android:gravity="center_horizontal"
        android:text="@string/pre_question" />

    <TextView
        android:id="@+id/tv_question_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/small_dimen"
        android:drawableTop="@drawable/question_card"
        android:gravity="center_horizontal"
        android:text="@string/question_card" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/small_dimen"
        android:drawableTop="@drawable/icon_submit"
        android:gravity="center_horizontal"
        android:text="@string/commit" />

    <TextView
        android:id="@+id/tv_next_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/small_dimen"
        android:drawableTop="@drawable/icon_next"
        android:gravity="center_horizontal"
        android:text="@string/next_question" />
</LinearLayout>